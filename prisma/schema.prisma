generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  matrices  Matrix[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Matrix {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  rows      Int
  columns   Int
  values    Json
  creator   User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("matrices")
}
